@{
    ViewData["Title"] = "Future Posting";
}

@section Styles
{
	<link rel="stylesheet" href="~/css/pages/home.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero">
	<div class="container">
		<h1>Manage Your TikTok Posts Effortlessly</h1>
		<p>Create, schedule, and track your TikTok posts with ease. Future Posting simplifies your workflow!</p>
		<a asp-area="" asp-controller="Posting" asp-action="Index" class="button button-primary">Get Sarted</a>
	</div>
</section>

<!-- Key Features Section -->
<section class="features">
	<div class="container">
		<h2>Key Features</h2>
		<div class="feature-list">
			<div class="feature-item">
				<h3>Create Posts</h3>
				<p>Easily create posts with captions, hashtags, and media uploads.</p>
			</div>
			<div class="feature-item">
				<h3>Schedule Posts</h3>
				<p>Choose a time and date to publish your posts automatically.</p>
			</div>
			<div class="feature-item">
				<h3>Post History</h3>
				<p>View and manage all of your published and scheduled posts in one place.</p>
			</div>
		</div>
	</div>
</section>

<!-- How It Works Section -->
<section class="how-it-works">
	<div class="container">
		<h2>How It Works</h2>
		<ol>
			<li><a href='@Url.Action("Index", "User")'>Sign Up</a> and link your TikTok account.</li>
			<li><a href='@Url.Action("Index", "Posting")'>Create</a> or schedule posts directly from our platform.</li>
			<li><a href='@Url.Action("Index", "Posting")'>Track</a> your posts’ performance and manage future content.</li>
		</ol>
	</div>
</section>